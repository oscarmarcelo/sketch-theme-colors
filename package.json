{
  "name": "sketch-theme-colors",
  "version": "2.0.1",
  "description": "A quick way to see the colors used in Sketch's UI",
  "scripts": {
    "start": "gulp",
    "build": "gulp build",
    "data": "node ./scripts/data.js",
    "get-colors": "node ./scripts/get-colors.js && npm run data",
    "publish": "node ./scripts/publish.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oscarmarcelo/sketch-theme-colors.git"
  },
  "keywords": [
    "Sketch",
    "theme",
    "colors"
  ],
  "author": {
    "name": "Oscar Marcelo",
    "url": "https://oscarmarcelo.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oscarmarcelo/sketch-theme-colors/issues"
  },
  "homepage": "https://oscarmarcelo.github.io/sketch-theme-colors",
  "private": true,
  "dependencies": {
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "chalk": "^4.1.1",
    "esm": "^3.2.25",
    "gh-pages": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-pug": "^4.0.1",
    "ora": "^5.4.0",
    "postcss": "^8.2.15",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.5",
    "run-applescript": "^4.0.0",
    "semver": "^7.3.5",
    "xo": "^0.40.1"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "last 2 ChromeAndroid versions",
    "last 2 iOS versions"
  ],
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "only": [
      "./src/**/*"
    ]
  },
  "xo": {
    "space": 2,
    "envs": [
      "node",
      "browser"
    ],
    "globals": [
      "MSColor",
      "MSTheme",
      "nil",
      "NSColorWithColorSpace",
      "NSFileManager",
      "NSString",
      "NSUTF8StringEncoding"
    ],
    "rules": {
      "no-multiple-empty-lines": [
        1,
        {
          "max": 3
        }
      ],
      "new-cap": [
        2,
        {
          "capIsNewExceptionPattern": "NS*"
        }
      ]
    },
    "ignores": [
      "build/**",
      "dist/**"
    ]
  }
}
